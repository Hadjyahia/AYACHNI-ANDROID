    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardView4"
        android:layout_width="324dp"
        android:layout_height="63dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/neumorphCardView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/neumorphCardView2"
        app:layout_constraintTop_toBottomOf="@+id/neumorphCardView2"
        app:layout_constraintVertical_bias="0.0"
        app:neumorph_shapeType="basin">
        <Spinner
            android:id="@+id/appUserRole"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:autofillHints="Person"
            android:textAlignment="center" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardView"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="327dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:neumorph_shapeType="basin">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/image"
            android:src="@drawable/check_mail" />

        <EditText
            android:id="@+id/email"
            android:layout_width="301dp"
            android:layout_height="51dp"
            android:layout_marginTop="-7dp"
            android:autofillHints=""
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/cool_grey"
            android:textSize="13dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="327dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphCardView4"
        app:neumorph_shapeType="basin">

        <EditText
            android:id="@+id/username"
            android:textAlignment="center"
            android:layout_width="301dp"
            android:layout_height="36dp"
            android:hint="Username"
            android:background="@android:color/transparent"

            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/cool_grey"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@+id/signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView4" />
    </soup.neumorphism.NeumorphCardView>

</androidx.constraintlayout.widget.ConstraintLayout>